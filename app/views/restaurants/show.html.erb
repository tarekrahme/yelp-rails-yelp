<div class="container restaurant-show">
  <h1>Restaurant</h1>

  <h2>
    <%= @restaurant.name %>
  </h2>

  <h4>
    Address: <%= @restaurant.address %>
    <br>
    Phone number: <%= @restaurant.phone_number %>
    <br>
    Cuisine: <%= @restaurant.category %>
  </h4>

  <br>
  <br>

<h3>All reviews:</h3>
  <% @restaurant.reviews.each do |review| %>
    <%= review.rating %>/5 - <%= review.content %>
  <% end %>

  <br>
  <br>

<h3>Add a review:</h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="content">
    <%= f.input :content %>
    <%= f.input :rating %>
  </div>
    <%= f.submit 'Add review', class: 'btn btn-success align-middle' %>
  <% end %>
</div>
